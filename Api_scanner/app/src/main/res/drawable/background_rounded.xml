<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item android:right="4dp" android:left="4dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#66000000" /> <!-- Color semi-transparente para sombra -->
            <corners android:radius="16dp" />  <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Fondo principal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Color de fondo -->
            <corners android:radius="16dp" />  <!-- Bordes redondeados -->
        </shape>
    </item>
</layer-list>
